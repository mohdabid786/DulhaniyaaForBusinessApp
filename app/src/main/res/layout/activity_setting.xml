<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Setting">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="?android:actionBarSize"
            android:padding="@dimen/dp_20"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/cover_banner"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/skyblue" />

        <TextView
            android:id="@+id/change_password"
            android:layout_below="@+id/cover_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_55"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@drawable/baseline_vpn_key_black_18"
            android:drawablePadding="@dimen/sp_10"
            android:text="Change Password"
            android:gravity="center_vertical"
            android:textSize="19dp"
            android:paddingLeft="@dimen/sp_15"
            android:textColor="@android:color/black"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/sign_out"
            android:layout_below="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_55"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@drawable/baseline_exit_to_app_black_18"
            android:drawablePadding="@dimen/sp_10"
            android:text="Sign Out"
            android:textSize="19dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sp_15"
            android:textColor="@android:color/black"
            android:textColorHint="@color/white" />




    </RelativeLayout>


</LinearLayout>